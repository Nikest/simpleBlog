{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "lib": [
      "dom",
      "es6",
      "webworker",
      "scripthost"
    ],
    "outDir": "build/dist",
    "noImplicitAny": false,
    "target": "ES2016",
    "removeComments": true,
    "preserveConstEnums": true,
    "jsx": "react",
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "exclude": [
    "build",
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
